<UserControl x:Class="AutoExtrusionReporter.Views.MainView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AutoExtrusionReporter.ViewModels"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:CompileBindings="True"
             x:DataType="vm:MainViewModel"
             mc:Ignorable="d">

	<Design.DataContext>
		<vm:MainViewModel/>
	</Design.DataContext>

	<Grid RowDefinitions="*,Auto" Margin="10">
		<TransitioningContentControl Content="{Binding CurrentPage}" />

		<StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="5"
					HorizontalAlignment="Right">
			<Button Command="{Binding NavigatePreviousCommand}" Content="Back" />
			<Button Command="{Binding NavigateNextCommand}" Content="Next" />
		</StackPanel>
	</Grid>
	
</UserControl>
